{
  "Comment": "A state machine that handles the order purchasing workflow",
  "StartAt": "Check Cart Items",
  "States": {
    "Check Cart Items": {
      "Type": "Task",
      "Resource": "${CartCheckerFunctionArn}",
      "Next": "Simulate Payment"
    },
    "Simulate Payment": {
      "Type": "Task",
      "Resource": "${PaymentSimulationFunctionArn}",
      "Next": "Payment Approved?"
    },
    "Payment Approved?": {
      "Type": "Choice",
      "Choices": [
        {
          "Variable": "$.payment_status",
          "StringMatches": "Approved",
          "Next": "Checkout Success"
        }
      ],
      "Default": "Checkout Fail"
    },
    "Checkout Success": {
      "Type": "Succeed"
    },
    "Checkout Fail": {
      "Type": "Fail"
    }
  }
}
}